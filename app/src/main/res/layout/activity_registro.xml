<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color"
        tools:context=".RegistroActivity">

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmClave"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="122dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="95dp"
            android:backgroundTint="@color/white_transparent"
            android:fontFamily="@font/open_sans_light"
            android:text="Registrarse"
            android:textColor="#BA00EE"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/clave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/correoUser"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white_transparent"
            android:drawableRight="@drawable/ojito_passwd"
            android:fontFamily="@font/open_sans_light"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/nombreUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/textViewRegistro"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white_transparent"
            android:drawableRight="@drawable/icon_user"
            android:fontFamily="@font/open_sans_light"
            android:hint="Usuario"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/correoUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/nombreUser"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white_transparent"
            android:drawableRight="@drawable/baseline_alternate_email_24"
            android:fontFamily="@font/open_sans_light"
            android:hint="Correo electrónico"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/confirmClave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/clave"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white_transparent"
            android:drawableRight="@drawable/ojito_passwd"
            android:fontFamily="@font/open_sans_light"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColorHint="@color/white" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="270dp"
            android:layout_height="207dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="77dp"
            app:srcCompat="@drawable/logomelodify" />

        <TextView
            android:id="@+id/textViewRegistro"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="107dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="133dp"
            android:fontFamily="@font/open_sans_light"
            android:text="Registro"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="36sp"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>